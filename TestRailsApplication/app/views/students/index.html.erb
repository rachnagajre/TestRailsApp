<!DOCTYPE html>
<html>
  <head>
    ...
  </head>
  <body>

    <div id="main-container" class="container">
      <div class="row">
        <div class="col-xs-3">
        <p id="notice"><%= notice %></p>
          <h1>Students List</h1>
        </div>
        <div class="col-xs-9">
          <table>
  <thead>
    <tr>
      <th>Rno</th>
      <th>Name</th>
      <th>Marks</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @students.each do |student| %>
      <tr>
        <td><%= student.rno %></td>
        <td><%= student.name %></td>
        <td><%= student.marks %></td>
        <td><%= link_to 'Show', student %></td>
        <td><%= link_to 'Edit', edit_student_path(student) %></td>
        <td><%= link_to 'Destroy', student, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Student', new_student_path %>

        </div>
      </div>
    </div>

  </body>
</html>







